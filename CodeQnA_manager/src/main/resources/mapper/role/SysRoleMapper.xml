<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjh.codeqna.manager.mapper.SysRoleMapper">

    <resultMap id="sysRoleMap" type="com.cjh.codeqna.model.entity.system.SysRole" autoMapping="true"></resultMap>

    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>

    <!--查询符合条件的所有角色数据-->
    <select id="findByPage" resultMap="sysRoleMap">
        SELECT <include refid="columns"/>
        FROM sys_role
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name LIKE CONCAT('%', #{roleName} ,'%')
            </if>
            AND is_deleted = 0
        </where>
        ORDER BY id DESC
    </select>

    <!--角色添加-->
    <insert id="add">
        INSERT INTO sys_role (
        id,
        role_name,
        role_code,
        description
        ) VALUES (
        #{id},
        #{roleName},
        #{roleCode},
        #{description}
        )
    </insert>

    <!--角色修改-->
    <update id="edit">
        UPDATE sys_role SET
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            DESCRIPTION = #{description},
        </if>
        update_time = NOW()
        WHERE id = #{id}
    </update>

    <!--角色删除-->
    <update id="delete">
        UPDATE sys_role
        SET is_deleted=1
        WHERE id=#{roleId}
    </update>
</mapper>